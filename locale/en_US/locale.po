msgid "plugins.generic.fileIntegrity.displayName"
msgstr "File Integrity Scanner"

msgid "plugins.generic.fileIntegrity.description"
msgstr "This plugin scans for file modifications, additions, or deletions to detect potential security breaches by comparing local file hashes against official baselines."

msgid "plugins.generic.fileIntegrity.scan.run"
msgstr "Run File Integrity Scan"

msgid "plugins.generic.fileIntegrity.scan.run.description"
msgstr "Are you sure you want to run a manual file integrity scan? This may take a moment. You will be notified when it is complete."

msgid "plugins.generic.fileIntegrity.scan.success"
msgstr "Scan completed. If any issues were found, a summary has been sent to the site's primary contact email."

msgid "plugins.generic.fileIntegrity.scan.error"
msgstr "The scan could not be completed. Check the PHP error log for more details."

msgid "plugins.generic.fileIntegrity.cache.clear"
msgstr "Clear Integrity Cache"

msgid "plugins.generic.fileIntegrity.cache.clear.description"
msgstr "Are you sure you want to clear the hash cache? This will force a fresh download of all baseline files on the next scan."

msgid "plugins.generic.fileIntegrity.cache.clear.success"
msgstr "The integrity cache has been successfully cleared."

msgid "plugins.generic.fileIntegrity.email.subject"
msgstr "File Integrity Scan Results: Issues Detected"

msgid "plugins.generic.fileIntegrity.email.body.issues"
msgstr "The File Integrity Scanner has detected one or more issues with your OJS installation. The following files do not match the official baseline:"

msgid "plugins.generic.fileIntegrity.email.body.modified"
msgstr "Modified Files"

msgid "plugins.generic.fileIntegrity.email.body.added"
msgstr "Added Files"

msgid "plugins.generic.fileIntegrity.email.body.deleted"
msgstr "Deleted Files"

msgid "plugins.generic.fileIntegrity.settings.manualExcludes"
msgstr "Manual Excludes"

msgid "plugins.generic.fileIntegrity.settings.manualExcludes.description"
msgstr "Enter file or directory paths to exclude from the scan, one path per line. Paths should be relative to the OJS root directory (e.g., 'config.inc.php' or 'plugins/generic/myCustomPlugin')."

msgid "plugins.generic.fileIntegrity.settings.title"
msgstr "File Integrity Settings"